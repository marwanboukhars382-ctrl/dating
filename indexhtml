<script>
/* CONFIG: replace with your Smartlink */
const SMARTLINK = "YOUR_SMARTLINK_HERE";

/* Show age modal on first visit or if not accepted */
const modal = document.getElementById('ageModal');
const ageKey = 'acceptedAge_v1';
if(!localStorage.getItem(ageKey)){
  modal.style.display = 'flex';
}

document.getElementById('ok').onclick = ()=>{
  localStorage.setItem(ageKey, '1');
  modal.style.display='none';
};
document.getElementById('notOk').onclick = ()=>{
  alert('You must be 18+ to use this site.');
};

/* Chat behaviour */
const chat = document.getElementById('chat');
const txt = document.getElementById('txt');
const sendBtn = document.getElementById('sendBtn');
const unlockBtn = document.getElementById('unlockBtn');

function appendBubble(text, cls='bot'){
  const d = document.createElement('div');
  d.className = 'bubble ' + (cls==='bot'?'bot':'you');
  d.innerText = text;
  chat.appendChild(d);
  chat.scrollTop = chat.scrollHeight;
}

/* typing simulation then bot reply */
function botReplySequence(replyText, delay=900){
  const typing = document.createElement('div');
  typing.className='fake-typing';
  typing.innerHTML = '<span style="display:inline-block;height:10px;width:8px;border-radius:6px;background:#fff;opacity:.12;margin-right:6px"></span><span style="display:inline-block;height:10px;width:8px;border-radius:6px;background:#fff;opacity:.12;margin-right:6px"></span><span style="display:inline-block;height:10px;width:8px;border-radius:6px;background:#fff;opacity:.12"></span>';
  chat.appendChild(typing);
  chat.scrollTop = chat.scrollHeight;
  setTimeout(()=>{
    typing.remove();
    appendBubble(replyText, 'bot');
  }, delay);
}

/* prewritten replies to increase curiosity */
const botReplies = [
  "If you reply, I might show you something special...",
  "I only open messages to people who seem interesting‚Ä¶",
  "Promise you won't be disappointed üòè",
  "There‚Äôs something behind the private message you‚Äôll like‚Ä¶",
];

sendBtn.onclick = ()=>{
  const value = txt.value.trim();
  if(!value) return;
  appendBubble(value, 'you');
  txt.value='';
  // pick a random bot reply
  const r = botReplies[Math.floor(Math.random()*botReplies.length)];
  botReplySequence(r, 900 + Math.random()*700);
};

/* unlock button: show small countdown then redirect to offer */
unlockBtn.onclick = ()=>{
  // short micro-copy to increase conversion
  unlockBtn.disabled = true;
  let t = 4;
  const original = unlockBtn.innerText;
  unlockBtn.innerText = `Unlocking ${t}...`;
  const iv = setInterval(()=>{
    t--;
    if(t<=0){
      clearInterval(iv);
      unlockBtn.innerText = 'Redirecting...';
      // analytics pixel placeholder
      try{
        /* Example: send simple beacon (replace with real analytics) */
        navigator.sendBeacon && navigator.sendBeacon('/ping','unlock');
      }catch(e){}
      // final redirect
      window.location.href = SMARTLINK;
    } else {
      unlockBtn.innerText = `Unlocking ${t}...`;
    }
  },1000);
};

/* small UX: tap Enter to send */
txt.addEventListener('keydown', (e)=>{
  if(e.key==='Enter'){ sendBtn.click(); }
});

/* Optional: show extra bot message after some idle time to reengage */
let idleTimer;
function startIdle(){
  clearTimeout(idleTimer);
  idleTimer=setTimeout(()=>{
    botReplySequence("Still there? I love when people take initiative üòâ", 800);
  }, 20000); // 20s
}
document.addEventListener('click', startIdle);
startIdle();

/* Accessibility: if SMARTLINK not set, disable unlock */
if(SMARTLINK.includes('YOUR_SMARTLINK_HERE')){
  unlockBtn.onclick = ()=>{ alert('Smartlink not set. Replace SMARTLINK in code with your offer link.');};
  // also keep age modal closed only for preview
}
</script>

